<div class="h-screen">
  <div class="fixed w-screen bg-white h-24 flex items-center pl-[112px] pr-14">
    <div class="pt-5 text-8xl text-accent-logo font-bold font-logo tracking-wide">Mshift</div>
    <div class="ml-auto flex items-center gap-x-8">
      <%= link_to "ログイン", new_user_session_path, class: "text-lg text-main-blue font-semibold hover:underline font-body" %>
      <%= link_to "新規登録", new_user_registration_path, class: "block text-center py-5 w-[136px] h-[64px] bg-accent-register text-main-white font-semibold rounded-full" %>
    </div>
  </div>
  <div class="flex justify-center items-center h-full bg-main-bg pt-24 gap-16 xl:gap-20">
